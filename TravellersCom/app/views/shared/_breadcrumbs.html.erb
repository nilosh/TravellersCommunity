<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/">Home</a>
    </li>
    <% @breadcrumbs.each do |b| %>
      <% if b[:path].nil? %>
        <li class="breadcrumb-item active" aria-current="page">
          <%= b[:label] %>
        </li>
      <% else %>
        <li class="breadcrumb-item">
          <%= link_to b[:label], b[:path] %>
        </li>
      <% end %>
    <% end %>
  </ol>
</nav>